{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/node22/tsconfig.json",
    "@tsconfig/node-ts/tsconfig.json"
  ],
  "compilerOptions": {
    "verbatimModuleSyntax": false,

    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist"
  },
  "exclude": ["dist", "node_modules"],
  "tsc-alias": {
    "verbose": true,
    "resolveFullPaths": true
  }
}
